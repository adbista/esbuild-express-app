{
  "name": "splunk-otel-example-basic",
  "private": true,
  "main": "index.js",
  "scripts": {
    "compile": "npx tsc --build",
    "start": "node dist/index.js",
    "start-otel": "OTEL_SERVICE_NAME=adam_service node -r @splunk/otel/instrument dist/index.js",
    "esbuild": "npx ts-node build.ts",
